<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".StoreListActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_setting"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="  설정"
            android:layout_marginRight="2dp"
            android:scaleType="centerInside"
            android:drawableStart="@drawable/ic_baseline_settings_24"
            android:gravity="center_vertical"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/roulette"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="  룰렛"
            android:layout_marginRight="2dp"
            android:scaleType="centerInside"
            android:drawableStart="@drawable/ic_baseline_thumb_up_24"
            android:gravity="center_vertical"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/btn_switchMap"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3.3"
            android:text="   지도로 변환"
            android:layout_marginRight="2dp"
            android:scaleType="centerInside"
            android:drawableStart="@drawable/ic_baseline_cached_24"
            android:gravity="center_vertical"
            android:layout_gravity="center"
            />


        <Button
            android:id="@+id/btn_search"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:scaleType="centerInside"
            android:drawableStart="@drawable/ic_baseline_search_24"
            android:gravity="center_vertical"
            android:layout_gravity="center"
            android:text="  검색"/>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>




</LinearLayout>
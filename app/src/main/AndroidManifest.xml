        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:targetApi="m">
        <meta-data
            android:name="android.app.searchable"
            android:resource="@xml/searchable" />
        <activity android:name=".MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".StoreMapActivity" />
        <activity android:name=".StoreListActivity" />
        <activity android:name=".SearchStoreActivity"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />
        <activity android:name=".SettingActivity" />
        <activity android:name=".StoreClickActivity"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyAF53ugPy_yMcY-WyUMzC1FbDpG403w0Uk"/>

        <uses-library android:name="org.apache.http.legacy"
